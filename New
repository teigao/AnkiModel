<script>
    function showdiv(){
        if(showdiv_display = document.getElementById('hide').style.display=='none')
        {document.getElementById('hide').style.display='block';}
        else
        {document.getElementById('hide').style.display='none';}
    }
    window.onload=function display(){
        if (document.getElementById("checkvocabulary").innerHTML == '') 
        {document.getElementById("vocabulary").style.display="none";}
        if (document.getElementById("checkvocabularysample").innerHTML == '') 
        {document.getElementById("vocabularysample").style.display="none";}
        if (document.getElementById("checkoxfordcollection").innerHTML == '') 
        {document.getElementById("oxfordcollection").style.display="none";}
        if (document.getElementById("checkoxfordthesaurus").innerHTML == '') 
        {document.getElementById("oxfordthesaurus").style.display="none";}
        if (document.getElementById("checknote").innerHTML == '') 
        {document.getElementById("notess").style.display="none";}
    }
</script>
